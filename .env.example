# Guard Vision V2 - Production Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-production-key-change-this
DEBUG=False

# GitHub OAuth Configuration (Required)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Authorization Configuration
ALLOWED_GITHUB_ORG=your-organization-name
ALLOWED_GITHUB_USERS=user1,user2,user3

# ML API Configuration
ML_API_URL=http://ml-api:8000/predict
ML_API_TIMEOUT=30

# Application Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Camera Configuration (for external camera service)
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Security Settings
SESSION_TIMEOUT_HOURS=24
OAUTHLIB_INSECURE_TRANSPORT=0  # Set to 1 only for development

# Logging
LOG_LEVEL=INFO